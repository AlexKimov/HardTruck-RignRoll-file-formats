typedef struct {
  string FileName;
  UINT SectionSize;  
  TGA_HEADER TGAHEADER;
  // LineOffset
  n = ReadInt(FTell());
  size = SectionSize - sizeof(TGA_HEADER);

  if (n == 1179012940) 
  { // "LOFF"
    IDENTIFIER Loff[4];
    UINT Size;
    UINT Offset;
    size = SectionSize - sizeof(TGA_HEADER) - 12 - 44;
    BYTE ImageData[size];  
    if (Offset)
    {
      IDENTIFIER id[4];
      if (id == "LVMP") 
      {
        LVMP lvmp;
        IDENTIFIER id[4];
        PFRM pfrm;
      } else 
        PFRM pfrm;  
      IDENTIFIER Endr[4];
      UINT Size;      
    };  
  }
  else
    BYTE Data[size];
} TXR <optimize=false, name=txrName>;

